<!DOCTYPE html>
@using CapaDominio.Entidades;
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title </title>
    @*<link rel="stylesheet" href="~/Fondo/Fondo.css" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="fondo">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
            @{
                if (Session["cliente"] != null)
                {
                    Cliente cliente = (Cliente)Session["cliente"];
                    <a class="text-light bg-dark btn btn-dark" style="text-decoration: none;"> Bienvenido: @cliente.Apellido @cliente.Nombre </a>
                }
            }
            <a href="/Producto/ListarProductos" class="text-light bg-dark btn btn-dark" style="text-decoration: none;"> Menu </a>
            @{
                if (Session["cliente"] == null)
                {
                    <a href="/Login/VerificarAcceso" class="text-light bg-dark btn btn-dark" style="text-decoration: none;"> Login </a>
                }
            }
            <a href="/Carrito/ListarCarrito" class="text-light bg-dark btn btn-dark" style="text-decoration: none;"> Carrito </a>
            @{
                if (Session["cliente"] != null)
                {
                    <a href="/Pedido/ListaPedidoPorCliente" class="text-light bg-dark btn btn-dark" style="text-decoration: none;"> Mis compras </a>
                    <a href="/Login/Logout" class="text-light bg-dark btn btn-dark d-flex" style="text-decoration: none; margin-left: 50%"> Cerrar sesión </a>
                }
            }
        </nav>

        <div class="container">
            @RenderBody()
        </div>
    </div>
    <script src="~/Javascript/CarritoDeCompras.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>